{% extends 'base.html.twig' %}

{% block title %}Find Your Skill Swap Matches - SkillSwap{% endblock %}

{% block body %}
<div class="matching-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 mb-0">Find Your Perfect Matches</h1>
            <p class="text-muted">Discover users with complementary skills to swap knowledge with</p>
        </div>
        <div>
            <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>
</div>

{% if app.user.skillsOffered is empty or app.user.skillsWanted is empty %}
    <div class="alert alert-info">
        <h5><i class="fas fa-info-circle me-2"></i>Add more skills to improve your matches</h5>
        <p class="mb-0">To find great skill swap partners, make sure to add skills you can teach and skills you want to learn in your profile.</p>
        <div class="mt-3">
            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit My Skills
            </a>
        </div>
    </div>
{% endif %}

<div class="row g-4 mb-5">
    <!-- Perfect Matches Card -->
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-star me-2"></i>Perfect Skill Swap Matches
                </h5>
                <a href="{{ path('app_matching_perfect') }}" class="btn btn-sm btn-light">View All</a>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">These users can teach skills you want to learn, and they want to learn skills you can teach. Perfect for a mutually beneficial skill swap!</p>
                
                {% if perfectMatches is empty %}
                    <div class="text-center py-4">
                        <div class="text-muted mb-3">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                        <h6>No perfect matches found</h6>
                        <p class="text-muted small mb-3">Try adding more skills to your profile to find perfect matches.</p>
                    </div>
                {% else %}
                    <div class="row g-4">
                        {% for match in perfectMatches %}
                            <div class="col-md-6 col-lg-3">
                                <div class="card h-100 border">
                                    <div class="card-body text-center">
                                        <div class="avatar bg-primary text-white mb-3 mx-auto rounded-circle" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 2rem;">
                                            {% if match.user.avatar %}
                                                <img src="{{ match.user.avatar }}" alt="{{ match.user.username }}" class="rounded-circle" width="80" height="80">
                                            {% else %}
                                                {{ match.user.username|first|upper }}
                                            {% endif %}
                                        </div>
                                        <h5 class="card-title">{{ match.user.username }}</h5>
                                        <p class="text-muted small">
                                            {% if match.user.location %}
                                                <i class="fas fa-map-marker-alt me-1"></i> {{ match.user.location }}
                                            {% endif %}
                                        </p>
                                        
                                        <div class="match-stats mb-3">
                                            <span class="badge bg-success rounded-pill">{{ match.totalMatchScore }} Skill Matches</span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <h6 class="small">They can teach you:</h6>
                                            <div>
                                                {% for skill in match.theyTeachSkills %}
                                                    <span class="badge bg-light text-dark me-1 mb-1">{{ skill.name }}</span>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <h6 class="small">You can teach them:</h6>
                                            <div>
                                                {% for skill in match.youTeachSkills %}
                                                    <span class="badge bg-primary me-1 mb-1">{{ skill.name }}</span>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent text-center">
                                        <a href="{{ path('app_user_profile', {'username': match.user.username}) }}" class="btn btn-sm btn-outline-primary me-2">
                                            <i class="fas fa-eye me-1"></i>View Profile
                                        </a>
                                        <a href="{{ path('app_session_new', {'username': match.user.username}) }}" class="btn btn-sm btn-success">
                                            <i class="fas fa-handshake me-1"></i>Request Swap
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    
                    {% if perfectMatches|length > 0 %}
                        <div class="text-center mt-4">
                            <a href="{{ path('app_matching_perfect') }}" class="btn btn-outline-success">
                                <i class="fas fa-users me-2"></i>See All Perfect Matches
                            </a>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Potential Teachers Card -->
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-graduation-cap me-2"></i>Users Who Can Teach You
                </h5>
                <a href="{{ path('app_matching_teachers') }}" class="btn btn-sm btn-light">View All</a>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">These users can teach skills you want to learn.</p>
                
                {% if potentialTeachers is empty %}
                    <div class="text-center py-4">
                        <div class="text-muted mb-3">
                            <i class="fas fa-chalkboard-teacher fa-3x"></i>
                        </div>
                        <h6>No potential teachers found</h6>
                        <p class="text-muted small mb-3">Try adding more skills you want to learn to your profile.</p>
                    </div>
                {% else %}
                    <div class="list-group">
                        {% for match in potentialTeachers %}
                            <div class="list-group-item">
                                <div class="d-flex align-items-center">
                                    <div class="avatar bg-primary text-white me-3 rounded-circle" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">
                                        {% if match.user.avatar %}
                                            <img src="{{ match.user.avatar }}" alt="{{ match.user.username }}" class="rounded-circle" width="50" height="50">
                                        {% else %}
                                            {{ match.user.username|first|upper }}
                                        {% endif %}
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">{{ match.user.username }}</h6>
                                        <p class="text-muted small mb-0">
                                            {% if match.user.location %}
                                                <i class="fas fa-map-marker-alt me-1"></i> {{ match.user.location }}
                                            {% endif %}
                                        </p>
                                        <div class="mt-1">
                                            <span class="badge bg-info rounded-pill">{{ match.matchCount }} Skills</span>
                                            {% for skill in match.matchingSkills %}
                                                <span class="badge bg-light text-dark me-1">{{ skill.name }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="ms-auto">
                                        <a href="{{ path('app_user_profile', {'username': match.user.username}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    
                    {% if potentialTeachers|length > 0 %}
                        <div class="text-center mt-4">
                            <a href="{{ path('app_matching_teachers') }}" class="btn btn-outline-info">
                                <i class="fas fa-graduation-cap me-2"></i>See All Potential Teachers
                            </a>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Potential Students Card -->
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-graduate me-2"></i>Users You Can Teach
                </h5>
                <a href="{{ path('app_matching_students') }}" class="btn btn-sm btn-light">View All</a>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">These users want to learn skills you can teach.</p>
                
                {% if potentialStudents is empty %}
                    <div class="text-center py-4">
                        <div class="text-muted mb-3">
                            <i class="fas fa-user-graduate fa-3x"></i>
                        </div>
                        <h6>No potential students found</h6>
                        <p class="text-muted small mb-3">Try adding more skills you can teach to your profile.</p>
                    </div>
                {% else %}
                    <div class="list-group">
                        {% for match in potentialStudents %}
                            <div class="list-group-item">
                                <div class="d-flex align-items-center">
                                    <div class="avatar bg-primary text-white me-3 rounded-circle" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">
                                        {% if match.user.avatar %}
                                            <img src="{{ match.user.avatar }}" alt="{{ match.user.username }}" class="rounded-circle" width="50" height="50">
                                        {% else %}
                                            {{ match.user.username|first|upper }}
                                        {% endif %}
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">{{ match.user.username }}</h6>
                                        <p class="text-muted small mb-0">
                                            {% if match.user.location %}
                                                <i class="fas fa-map-marker-alt me-1"></i> {{ match.user.location }}
                                            {% endif %}
                                        </p>
                                        <div class="mt-1">
                                            <span class="badge bg-primary rounded-pill">{{ match.matchCount }} Skills</span>
                                            {% for skill in match.matchingSkills %}
                                                <span class="badge bg-light text-dark me-1">{{ skill.name }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="ms-auto">
                                        <a href="{{ path('app_user_profile', {'username': match.user.username}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    
                    {% if potentialStudents|length > 0 %}
                        <div class="text-center mt-4">
                            <a href="{{ path('app_matching_students') }}" class="btn btn-outline-primary">
                                <i class="fas fa-user-graduate me-2"></i>See All Potential Students
                            </a>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="text-center mb-5">
    <div class="mb-3">
        <img src="{{ asset('build/images/skill-swap-illustration.svg') }}" alt="Skill Swap Illustration" width="200" class="img-fluid">
    </div>
    <h3>Ready to grow your skills?</h3>
    <p class="text-muted">Connect with others and start exchanging knowledge today!</p>
    <a href="{{ path('app_skills') }}" class="btn btn-lg btn-primary">
        <i class="fas fa-search me-2"></i>Explore More Skills
    </a>
</div>
{% endblock %} 