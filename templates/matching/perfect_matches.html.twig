{% extends 'base.html.twig' %}

{% block title %}Perfect Skill Swap Matches - SkillSwap{% endblock %}

{% block body %}
<div class="matching-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 mb-0">Perfect Skill Swap Matches</h1>
            <p class="text-muted">Users who can teach skills you want to learn, and want to learn skills you can teach</p>
        </div>
        <div>
            <a href="{{ path('app_matching') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Matches
            </a>
        </div>
    </div>
</div>

{% if app.user.skillsOffered is empty or app.user.skillsWanted is empty %}
    <div class="alert alert-info">
        <h5><i class="fas fa-info-circle me-2"></i>Add more skills to improve your matches</h5>
        <p class="mb-0">To find perfect skill swap partners, make sure to add skills you can teach and skills you want to learn in your profile.</p>
        <div class="mt-3">
            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit My Skills
            </a>
        </div>
    </div>
{% endif %}

{% if perfectMatches is empty %}
    <div class="alert alert-light text-center py-5">
        <div class="text-muted mb-3">
            <i class="fas fa-users fa-4x"></i>
        </div>
        <h4>No perfect matches found</h4>
        <p class="text-muted">We couldn't find any users who both want to learn your skills and can teach you skills you want to learn.</p>
        <div class="mt-4">
            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Update My Skills
            </a>
            <a href="{{ path('app_skills') }}" class="btn btn-outline-primary ms-2">
                <i class="fas fa-search me-2"></i>Explore Skills
            </a>
        </div>
    </div>
{% else %}
    <div class="row g-4 mb-5">
        {% for match in perfectMatches %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="avatar bg-primary text-white me-3 rounded-circle" style="width: 70px; height: 70px; display: flex; align-items: center; justify-content: center; font-size: 1.8rem;">
                                {% if match.user.avatar %}
                                    <img src="{{ match.user.avatar }}" alt="{{ match.user.username }}" class="rounded-circle" width="70" height="70">
                                {% else %}
                                    {{ match.user.username|first|upper }}
                                {% endif %}
                            </div>
                            <div>
                                <h5 class="card-title mb-0">{{ match.user.username }}</h5>
                                <p class="text-muted small mb-1">
                                    {% if match.user.location %}
                                        <i class="fas fa-map-marker-alt me-1"></i> {{ match.user.location }}
                                    {% endif %}
                                </p>
                                <div class="match-stats">
                                    <span class="badge bg-success rounded-pill">{{ match.totalMatchScore }} Skill Matches</span>
                                </div>
                            </div>
                        </div>
                        
                        {% if match.user.bio %}
                            <p class="small text-muted mb-3">{{ match.user.bio|length > 120 ? match.user.bio|slice(0, 120) ~ '...' : match.user.bio }}</p>
                        {% endif %}
                        
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="card border bg-light">
                                    <div class="card-body p-2">
                                        <h6 class="small text-center mb-2">They can teach you:</h6>
                                        <div class="text-center">
                                            {% for skill in match.theyTeachSkills %}
                                                <span class="badge bg-info text-white me-1 mb-1">{{ skill.name }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border bg-light">
                                    <div class="card-body p-2">
                                        <h6 class="small text-center mb-2">You can teach them:</h6>
                                        <div class="text-center">
                                            {% for skill in match.youTeachSkills %}
                                                <span class="badge bg-primary me-1 mb-1">{{ skill.name }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_user_profile', {'username': match.user.username}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye me-1"></i>View Profile
                            </a>
                            <a href="{{ path('app_session_new', {'username': match.user.username}) }}" class="btn btn-sm btn-success">
                                <i class="fas fa-handshake me-1"></i>Request Skill Swap
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}

<div class="text-center mb-5">
    <a href="{{ path('app_matching') }}" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left me-2"></i>Back to All Matches
    </a>
</div>
{% endblock %} 