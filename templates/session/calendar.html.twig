{% extends 'base.html.twig' %}

{% block title %}Add to Calendar - Session #{{ session.id }} - SkillSwap{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-4">
                <a href="{{ path('app_session_view', {'id': session.id}) }}" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left me-2"></i>Back to Session
                </a>
            </div>
            
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h1 class="h3 mb-0">
                        <i class="fas fa-calendar-plus text-primary me-2"></i>Add to Calendar
                    </h1>
                </div>
                <div class="card-body p-4">
                    <div class="session-details mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="display-icon me-4">
                                <i class="fas fa-calendar-check display-4 text-primary"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">
                                    {% if session.skill %}
                                        {{ session.skill.name }} Session
                                    {% else %}
                                        Skill Exchange Session
                                    {% endif %}
                                </h5>
                                <p class="mb-0 text-muted">
                                    <i class="fas fa-clock me-2"></i>{{ session.dateTime|date('F j, Y') }} at {{ session.dateTime|date('g:i a') }}
                                    {% if session.duration %}
                                        <span>Â· {{ session.duration }} minutes</span>
                                    {% endif %}
                                </p>
                                
                                {% if session.location %}
                                    <p class="mb-0 text-muted">
                                        <i class="fas fa-map-marker-alt me-2"></i>{{ session.location }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="participants mb-3">
                            <div class="card bg-light border-0">
                                <div class="card-body py-3">
                                    <div class="d-flex align-items-center">
                                        <!-- From User -->
                                        <div class="d-flex align-items-center">
                                            {% if session.fromUser.avatar %}
                                                <img src="{{ asset('uploads/avatars/' ~ session.fromUser.avatar) }}" alt="{{ session.fromUser.username }}" class="rounded-circle me-2" width="32" height="32">
                                            {% else %}
                                                <div class="avatar-placeholder rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; background-color: var(--primary-color); color: white;">
                                                    {{ session.fromUser.username|first|upper }}
                                                </div>
                                            {% endif %}
                                            <span>{{ session.fromUser.username }}</span>
                                        </div>
                                        
                                        <div class="mx-3">
                                            <i class="fas fa-exchange-alt text-muted"></i>
                                        </div>
                                        
                                        <!-- To User -->
                                        <div class="d-flex align-items-center">
                                            {% if session.toUser.avatar %}
                                                <img src="{{ asset('uploads/avatars/' ~ session.toUser.avatar) }}" alt="{{ session.toUser.username }}" class="rounded-circle me-2" width="32" height="32">
                                            {% else %}
                                                <div class="avatar-placeholder rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; background-color: var(--primary-color); color: white;">
                                                    {{ session.toUser.username|first|upper }}
                                                </div>
                                            {% endif %}
                                            <span>{{ session.toUser.username }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        {% if session.notes %}
                            <div class="notes mb-3">
                                <h6>Session Notes:</h6>
                                <div class="card border-0 bg-light">
                                    <div class="card-body py-3">
                                        {{ session.notes|nl2br }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="calendar-options">
                        <h5 class="mb-3">Choose Your Calendar App</h5>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <a href="{{ path('app_calendar_session_ics', {'id': session.id}) }}" class="card calendar-option h-100 text-decoration-none text-body">
                                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                        <i class="fas fa-apple text-dark display-4 mb-3"></i>
                                        <h6 class="mb-1">Apple Calendar</h6>
                                        <p class="text-muted mb-0 small">iPhone, iPad, or Mac</p>
                                    </div>
                                </a>
                            </div>
                            
                            <div class="col-md-6">
                                <a href="{{ google_calendar_url }}" target="_blank" class="card calendar-option h-100 text-decoration-none text-body">
                                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                        <i class="fab fa-google text-danger display-4 mb-3"></i>
                                        <h6 class="mb-1">Google Calendar</h6>
                                        <p class="text-muted mb-0 small">Android or Web</p>
                                    </div>
                                </a>
                            </div>
                            
                            <div class="col-md-6">
                                <a href="{{ path('app_calendar_session_ics', {'id': session.id}) }}" class="card calendar-option h-100 text-decoration-none text-body">
                                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                        <i class="fab fa-microsoft text-primary display-4 mb-3"></i>
                                        <h6 class="mb-1">Outlook Calendar</h6>
                                        <p class="text-muted mb-0 small">Windows or Office 365</p>
                                    </div>
                                </a>
                            </div>
                            
                            <div class="col-md-6">
                                <a href="{{ path('app_calendar_session_ics', {'id': session.id}) }}" class="card calendar-option h-100 text-decoration-none text-body">
                                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                        <i class="fas fa-calendar-alt text-dark display-4 mb-3"></i>
                                        <h6 class="mb-1">Other Calendar App</h6>
                                        <p class="text-muted mb-0 small">Download .ics file</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                        
                        <div class="text-center mt-4">
                            <a href="{{ path('app_calendar') }}" class="btn btn-outline-primary me-2">
                                <i class="fas fa-calendar-alt me-2"></i>View Calendar
                            </a>
                            <a href="{{ path('app_session_view', {'id': session.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Session
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Need Help?</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-0">If you're having trouble adding this session to your calendar, please visit our <a href="{{ path('app_help') }}">Help Center</a> or <a href="{{ path('app_help_contact') }}">contact support</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.calendar-option {
    transition: all 0.3s ease;
    border: 1px solid rgba(0,0,0,0.1);
}

.calendar-option:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    border-color: var(--primary-color);
}

.display-icon {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
}
</style>
{% endblock %} 