{% extends 'base.html.twig' %}

{% block title %}Manage FAQs - Admin - SkillSwap{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0"><i class="fas fa-question-circle me-2"></i>Manage FAQs</h1>
        <a href="{{ path('app_admin_faq_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New FAQ
        </a>
    </div>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <div class="d-flex align-items-center justify-content-between">
                <h5 class="mb-0">FAQ List</h5>
                <span class="badge bg-primary">{{ faqs|length }} FAQs</span>
            </div>
        </div>
        <div class="card-body p-0">
            {% if faqs is empty %}
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-question-circle text-muted fa-3x"></i>
                    </div>
                    <h5>No FAQs found</h5>
                    <p class="text-muted">Start by adding your first FAQ to help users.</p>
                    <a href="{{ path('app_admin_faq_new') }}" class="btn btn-primary mt-2">
                        <i class="fas fa-plus me-1"></i>Add New FAQ
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="ps-4" style="width: 50px;">#</th>
                                <th scope="col">Question</th>
                                <th scope="col">Category</th>
                                <th scope="col" class="text-center">Order</th>
                                <th scope="col" class="text-center">Status</th>
                                <th scope="col" class="text-center">Created</th>
                                <th scope="col" class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for faq in faqs %}
                                <tr>
                                    <td class="ps-4">{{ faq.id }}</td>
                                    <td>
                                        <div style="max-width: 400px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                            {{ faq.question }}
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ faq.category }}</span>
                                    </td>
                                    <td class="text-center">{{ faq.displayOrder }}</td>
                                    <td class="text-center">
                                        {% if faq.isPublished %}
                                            <span class="badge bg-success">Published</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Draft</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">{{ faq.createdAt|date('M j, Y') }}</td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a href="{{ path('app_admin_faq_edit', {'id': faq.id}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteFaqModal{{ faq.id }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                        
                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteFaqModal{{ faq.id }}" tabindex="-1" aria-labelledby="deleteFaqModalLabel{{ faq.id }}" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteFaqModalLabel{{ faq.id }}">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this FAQ?</p>
                                                        <div class="alert alert-warning">
                                                            <strong>Question:</strong> {{ faq.question }}
                                                        </div>
                                                        <p class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i>This action cannot be undone.</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form action="{{ path('app_admin_faq_delete', {'id': faq.id}) }}" method="post" style="display: inline-block;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ faq.id) }}">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 