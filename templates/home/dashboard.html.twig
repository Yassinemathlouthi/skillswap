{% extends 'base.html.twig' %}

{% block title %}Dashboard - SkillSwap{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col">
        <h1 class="h3 mb-0">Welcome, {{ user.username }}!</h1>
        <p class="text-muted">Here's an overview of your SkillSwap activity</p>
    </div>
    <div class="col-auto">
        <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i>Edit Profile
        </a>
    </div>
</div>

<div class="row g-4">
    <!-- Profile Overview Card -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-user me-2"></i>Your Profile</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="avatar bg-primary text-white mx-auto mb-3 rounded-circle" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 2rem;">
                        {% if user.avatar %}
                            <img src="{{ user.avatar }}" alt="{{ user.username }}" class="rounded-circle" width="80" height="80">
                        {% else %}
                            {{ user.username|first|upper }}
                        {% endif %}
                    </div>
                    <h5 class="mb-1">{{ user.username }}</h5>
                    <p class="text-muted mb-0">{{ user.email }}</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="mb-2">Skills You Offer:</h6>
                    {% if user.skillsOffered is empty %}
                        <p class="small text-muted">You haven't added any skills that you can teach yet.</p>
                        <a href="{{ path('app_profile_edit') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-plus me-1"></i>Add Skills
                        </a>
                    {% else %}
                        <div>
                            {% for skill in user.skillsOffered %}
                                <span class="badge bg-primary me-1 mb-1">{{ skill }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
                
                <div>
                    <h6 class="mb-2">Skills You Want to Learn:</h6>
                    {% if user.skillsWanted is empty %}
                        <p class="small text-muted">You haven't added any skills that you want to learn yet.</p>
                        <a href="{{ path('app_profile_edit') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-plus me-1"></i>Add Skills
                        </a>
                    {% else %}
                        <div>
                            {% for skill in user.skillsWanted %}
                                <span class="badge bg-light text-dark me-1 mb-1">{{ skill }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <a href="{{ path('app_profile') }}" class="btn btn-link text-decoration-none p-0">
                    <i class="fas fa-eye me-1"></i>View Public Profile
                </a>
            </div>
        </div>
    </div>
    
    <!-- Upcoming Sessions Card -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0"><i class="fas fa-calendar-alt me-2"></i>Upcoming Sessions</h5>
            </div>
            <div class="card-body">
                <!-- This would be populated with real data from the session repository -->
                <div class="text-center py-5">
                    <div class="text-muted mb-3">
                        <i class="fas fa-calendar-day fa-3x"></i>
                    </div>
                    <h6>No upcoming sessions</h6>
                    <p class="text-muted small mb-3">You don't have any scheduled skill exchange sessions yet.</p>
                    <a href="{{ path('app_skills') }}" class="btn btn-outline-success">
                        <i class="fas fa-search me-1"></i>Find Skills to Learn
                    </a>
                </div>
                
                {# Example of what a session would look like #}
                {#
                <div class="card mb-2 border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0">JavaScript Basics</h6>
                            <span class="badge bg-success">Confirmed</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center text-muted small">
                            <div><i class="far fa-calendar me-1"></i> May 12, 2023</div>
