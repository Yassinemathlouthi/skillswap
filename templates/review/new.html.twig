{% extends 'base.html.twig' %}

{% block title %}Leave a Review - SkillSwap{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex align-items-center mb-4">
        <a href="{{ path('app_session_view', {'id': session.id}) }}" class="btn btn-outline-secondary btn-sm me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="h3 mb-0"><i class="fas fa-star me-2"></i>Leave a Review</h1>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Review for {{ reviewed_user.firstName ?? reviewed_user.username }}</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-3">
                            {% if reviewed_user.avatar %}
                                <img src="{{ reviewed_user.avatar }}" alt="{{ reviewed_user.username }}" class="rounded-circle me-3" width="64" height="64">
                            {% else %}
                                <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 64px; height: 64px; font-size: 1.5rem;">
                                    {{ reviewed_user.username|first|upper }}
                                </div>
                            {% endif %}
                            <div>
                                <h5 class="mb-0">
                                    {% if reviewed_user.firstName and reviewed_user.lastName %}
                                        {{ reviewed_user.firstName }} {{ reviewed_user.lastName }}
                                    {% else %}
                                        {{ reviewed_user.username }}
                                    {% endif %}
                                </h5>
                                <p class="text-muted mb-0">Session on {{ session.dateTime|date('F j, Y') }}</p>
                            </div>
                        </div>
                        
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <p class="mb-0"><strong>Skill:</strong> {{ session.skill }}</p>
                                {% if session.notes %}
                                    <p class="mb-0 mt-2"><strong>Session Notes:</strong> {{ session.notes }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    <form method="post" action="{{ path('app_review_new_from_session', {'sessionId': session.id}) }}">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Rating</label>
                            <div class="rating-stars mb-3">
                                <div class="d-flex">
                                    {% for i in 1..5 %}
                                        <div class="rating-star" data-value="{{ i }}">
                                            <i class="far fa-star fs-2"></i>
                                        </div>
                                    {% endfor %}
                                </div>
                                <input type="hidden" name="rating" id="rating" value="5" required>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="comment" class="form-label fw-bold">Your Review</label>
                            <textarea name="comment" id="comment" rows="4" class="form-control" placeholder="Share your experience working with this person..."></textarea>
                        </div>
                        
                        <div class="d-flex justify-content-end">
                            <a href="{{ path('app_session_view', {'id': session.id}) }}" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit Review</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.rating-stars {
    display: inline-block;
}

.rating-star {
    cursor: pointer;
    padding: 0 5px;
    color: var(--bs-warning);
}

.rating-star:hover i,
.rating-star.selected i {
    font-weight: 900;
    content: "\f005";
    font-family: "Font Awesome 5 Free";
}

.rating-star:hover ~ .rating-star i {
    font-weight: 400;
}

.rating-star.selected i {
    font-weight: 900;
}
</style>

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const stars = document.querySelectorAll('.rating-star');
    const ratingInput = document.getElementById('rating');
    
    // Set initial 5-star rating
    stars.forEach(star => {
        if (parseInt(star.dataset.value) <= 5) {
            star.classList.add('selected');
            star.querySelector('i').classList.remove('far');
            star.querySelector('i').classList.add('fas');
        }
    });
    
    stars.forEach(star => {
        star.addEventListener('click', function() {
            const value = parseInt(this.dataset.value);
            ratingInput.value = value;
            
            // Reset all stars
            stars.forEach(s => {
                s.classList.remove('selected');
                s.querySelector('i').classList.remove('fas');
                s.querySelector('i').classList.add('far');
            });
            
            // Set stars up to selected value
            stars.forEach(s => {
                if (parseInt(s.dataset.value) <= value) {
                    s.classList.add('selected');
                    s.querySelector('i').classList.remove('far');
                    s.querySelector('i').classList.add('fas');
                }
            });
        });
    });
});
</script>
{% endblock %}

{% endblock %} 