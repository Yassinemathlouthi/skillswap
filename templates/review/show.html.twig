{% extends 'base.html.twig' %}

{% block title %}Review Details - SkillSwap{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex align-items-center mb-4">
        <a href="{{ path('app_reviews') }}" class="btn btn-outline-secondary btn-sm me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="h3 mb-0"><i class="fas fa-star me-2"></i>Review Details</h1>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            {% if review.reviewer == app.user %}
                                Review for {{ reviewed_user.firstName ?? reviewed_user.username }}
                            {% else %}
                                Review from {{ reviewer.firstName ?? reviewer.username }}
                            {% endif %}
                        </h5>
                        <div class="text-warning">
                            {% for i in 1..5 %}
                                <i class="{% if i <= review.rating %}fas{% else %}far{% endif %} fa-star"></i>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-3">
                            {% if review.reviewer == app.user %}
                                <!-- Show reviewee info -->
                                {% if reviewed_user.avatar %}
                                    <img src="{{ reviewed_user.avatar }}" alt="{{ reviewed_user.username }}" class="rounded-circle me-3" width="64" height="64">
                                {% else %}
                                    <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 64px; height: 64px; font-size: 1.5rem;">
                                        {{ reviewed_user.username|first|upper }}
                                    </div>
                                {% endif %}
                                <div>
                                    <h5 class="mb-0">
                                        {% if reviewed_user.firstName and reviewed_user.lastName %}
                                            {{ reviewed_user.firstName }} {{ reviewed_user.lastName }}
                                        {% else %}
                                            {{ reviewed_user.username }}
                                        {% endif %}
                                    </h5>
                                    <small class="text-muted">{{ reviewed_user.username }}</small>
                                </div>
                            {% else %}
                                <!-- Show reviewer info -->
                                {% if reviewer.avatar %}
                                    <img src="{{ reviewer.avatar }}" alt="{{ reviewer.username }}" class="rounded-circle me-3" width="64" height="64">
                                {% else %}
                                    <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 64px; height: 64px; font-size: 1.5rem;">
                                        {{ reviewer.username|first|upper }}
                                    </div>
                                {% endif %}
                                <div>
                                    <h5 class="mb-0">
                                        {% if reviewer.firstName and reviewer.lastName %}
                                            {{ reviewer.firstName }} {{ reviewer.lastName }}
                                        {% else %}
                                            {{ reviewer.username }}
                                        {% endif %}
                                    </h5>
                                    <small class="text-muted">{{ reviewer.username }}</small>
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <div class="text-warning mb-2">
                                    {% for i in 1..5 %}
                                        <i class="{% if i <= review.rating %}fas{% else %}far{% endif %} fa-star"></i>
                                    {% endfor %}
                                    <span class="ms-2 text-dark fw-medium">{{ review.rating }} out of 5</span>
                                </div>
                                
                                <p class="mb-0">{{ review.comment }}</p>
                                <div class="text-muted mt-2 small">Posted on {{ review.createdAt|date('F j, Y') }}</div>
                            </div>
                        </div>
                        
                        {% set session = review.session %}
                        {% if session %}
                            <div class="card border-0 shadow-sm mb-3">
                                <div class="card-header bg-white">
                                    <h6 class="mb-0">Session Details</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="mb-1"><i class="far fa-calendar-alt me-2"></i> {{ session.dateTime|date('F j, Y') }}</p>
                                            <p class="mb-1"><i class="far fa-clock me-2"></i> {{ session.dateTime|date('g:i a') }}</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-1"><i class="fas fa-graduation-cap me-2"></i> {{ session.skill }}</p>
                                            <p class="mb-1"><i class="fas fa-map-marker-alt me-2"></i> {{ session.location ?? 'Location not specified' }}</p>
                                        </div>
                                    </div>
                                    
                                    {% if session.notes %}
                                        <div class="mt-3">
                                            <h6>Session Notes:</h6>
                                            <p class="mb-0 small">{{ session.notes }}</p>
                                        </div>
                                    {% endif %}
                                    
                                    <div class="mt-3">
                                        <a href="{{ path('app_session_view', {'id': session.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-calendar-check me-1"></i> View Session
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_reviews') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to Reviews
                        </a>
                        
                        {% if review.reviewer == app.user %}
                            <form method="post" action="{{ path('app_review_delete', {'id': review.id}) }}" onsubmit="return confirm('Are you sure you want to delete this review?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i> Delete Review
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 